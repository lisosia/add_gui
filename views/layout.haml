%html
  %head
    %link(rel="stylesheet" href="/css/default.css")
    %script(type="text/javascript" src="/js/jquery-2.2.4.min.js")
  %body
    %ul.headerlist
      %li <a href='/'>home</a>
      %li <a href='/table'>table (show all)</a>
      %li <a href='/process'>launched process</a>
      %li <a href='/running'>runnning tasks</a>

    <form action='/reload_ngs' method='post'><button type='submit'>reload config->ngsfile</button></form>
    <form action='/reload' method='post'><button type='submit'>reload_config (premise: no tasks are running now) </button></form>
    %hr
    %ul.configlist
      %li storage_root: #{@configs.storage_root}
      %li ngs_file: #{@configs.ngs_file}
      %li db_file: #{@configs.db_file}
      %li copy_output_dir: #{@configs.copy_output_dir}
      %li gxpc e hostname #{ `gxpc e hostname` }
      -# %li ldd #{ `ldd /bio/bin/samtools` }
      -# %li gxpc e ldd #{ `gxpc e ldd /bio/bin/samtools` }
    %hr
    = yield
